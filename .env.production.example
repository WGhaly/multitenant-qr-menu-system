# ================================
# The Menu Genie - Production Environment
# Domain: https://themenugenie.com
# ================================

# Database Configuration (PostgreSQL for Production)
DATABASE_URL="postgresql://username:password@hostname:5432/themenugenie_production?schema=public&connection_limit=10&pool_timeout=20&sslmode=require"

# JWT Configuration (IMPORTANT: Generate secure secrets!)
JWT_SECRET="REPLACE_WITH_SECURE_32_CHAR_MINIMUM_SECRET_KEY_HERE_USE_openssl_rand_base64_32"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Password Security
BCRYPT_ROUNDS="12"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="https://themenugenie.com"
NEXT_PUBLIC_API_URL="https://themenugenie.com/api"
NEXT_PUBLIC_SUPER_ADMIN_URL="https://themenugenie.com/super-admin"

# Image Upload Configuration
MAX_IMAGE_SIZE_MB="5"
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp,image/gif"

# Email Configuration (SMTP - Optional but recommended)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="noreply@themenugenie.com"
SMTP_PASS="your-app-specific-password"
FROM_EMAIL="noreply@themenugenie.com"
FROM_NAME="The Menu Genie"

# Security
ALLOWED_ORIGINS="https://themenugenie.com,https://www.themenugenie.com"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="15"

# Super Admin Default Credentials (CHANGE IMMEDIATELY AFTER FIRST LOGIN!)
DEFAULT_SUPER_ADMIN_EMAIL="admin@themenugenie.com"
DEFAULT_SUPER_ADMIN_PASSWORD="ChangeMe123!SecurePassword"

# Application Settings
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED="1"

# Optional: AWS S3 for Image Storage (if you prefer external storage)
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_S3_BUCKET="themenugenie-images"

# Optional: Cloudinary for Image Storage
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"

# Monitoring & Analytics (Optional)
# SENTRY_DSN="your-sentry-dsn"
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
